# Server Configuration
NODE_ENV=production
PORT=3000
API_URL=https://api.bangopoints.com

# Database Configuration
# For development: Default MySQL root user has empty password
# For production: Create a dedicated database user with a strong password
DB_HOST=localhost
DB_PORT=3306
DB_NAME=bangopoints
DB_USER=root
DB_PASSWORD=

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRE=7d
JWT_REFRESH_EXPIRE=30d

# Email Configuration (SMTP)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@bangopoints.com
SMTP_PASSWORD=emailpassword
FROM_EMAIL=BangoPoints <noreply@bangopoints.com>

# SMS Configuration (Optional)
SMS_API_KEY=your-sms-api-key
SMS_SENDER_ID=BangoPoints

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./public/uploads

# Cron Jobs Configuration
ENABLE_CRON=true
TIMEZONE=Africa/Nairobi

# Security Configuration
BCRYPT_ROUNDS=10
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# External Services
ADSENSE_CLIENT_ID=your-adsense-id

# Application URL (only needed for development mode with separate frontend server)
# In production, frontend is served from same server
CLIENT_URL=http://localhost:3001
