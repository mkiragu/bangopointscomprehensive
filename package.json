{
  "name": "bangopoints-comprehensive",
  "version": "1.0.0",
  "description": "Production-ready loyalty platform for the Kenyan market",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "migrate": "node src/migrations/migrate.js",
    "seed": "node src/migrations/seed.js",
    "seed:demo": "node src/scripts/seed-demo-data.js",
    "insert:dummy": "node src/scripts/insert-dummy-data.js",
    "build": "cd frontend && npm install && npm run build && cd ..",
    "build:clean": "rm -rf frontend/dist && npm run build",
    "install:frontend": "cd frontend && npm install && cd ..",
    "start:prod": "NODE_ENV=production node server.js"
  },
  "keywords": [
    "loyalty",
    "points",
    "rewards",
    "kenya"
  ],
  "author": "BangoPoints",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "csv-parser": "^3.0.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.6.5",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.7",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
